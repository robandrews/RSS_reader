<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<form action="<%= session_path(resource) %>" method="post" accept-charset="utf-8">
  

  <p><input type="submit" value="Continue &rarr;"></p>
</form>
  <div class="form-group"><%= f.label :email %><br />
    
    <div class="form-control"> <%= f.email_field :email, :autofocus => true %></div>
 </div>

  <div class="form-group"><%= f.label :password %><br />
  <div class="form-control"><%= f.password_field :password %></div></div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="btn btn-default"><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
